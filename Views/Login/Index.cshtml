@model PortalManagement.Entities.Login

@{
    ViewData["Title"] = "Login";
}
<head>
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />

</head>

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-5">
            <div class="card box">
                <div class="card-header cardHead">
                    <div class="container-fluid ">
                        <div class="text-center text-dark">
                            <h2>Login</h2>
                        </div>

                    </div>

                </div>
                <div class="card-body">
                    <form asp-action="Login">


                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="p-2">
                            <div class="inputbg p-2">
                                <div class="form-group ">
                                    <label asp-for="Username" class="control-label text-dark">Username</label>
                                    <input asp-for="Username" class="form-control inputtextstyle" type="text" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="p-2">
                            <div class="p-2 inputbg ">
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label text-dark">Password</label>
                                    <input asp-for="Password" class="form-control inputtextstyle" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="p-2">
                            <div class="container">
                                <div class="form-group text-center inputtextstyle loginbtn ">
                                    <input type="submit" value="Login" class="btn btn-block btn-color"/>
                                </div>
                            </div>
                        </div>


                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
